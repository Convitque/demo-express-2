extends ../layout/layout.pug
block content
    h1 BOOK

    .d-flex
    a.btn.btn-primary(href="/books/add") Add

    form(action="books/search",method="GET",class="d-flex")
        input(type="text",name="q")
        button(class="btn btn-primary ml-2") Search

    table.table 
            tr
                th Name
                th Price
            each book in Books
                tr
                    td= book.name
                    td= book.price
                
            